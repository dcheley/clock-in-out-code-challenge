<!DOCTYPE html>
<html>
  <head>
    <title>Work Attendance App</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Language" content="en">
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <img alt="Brand" src="...">
          </a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if !current_user %>
            <li class="nav-item"><%= link_to "Log in", login_url, class:"link" %></li>
            <li class="nav-item"><%= link_to "Sign up", new_user_url, class:"link" %></li>
          <% else %>
            <li class="nav-item"><%= link_to "Profile", user_url(current_user), class:"link" %></li>
            <li class="nav-item"><%= link_to "History", attendances_url, class:"link" %></li>
            <li class="nav-item"><%= link_to "Settings", edit_user_url(current_user), class:"link" %></li>
            <li class="nav-item"><%= link_to "Log out", logout_url, class:"link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <% if flash[:alert] || flash[:notice] %>
      <div class="alert"><%= flash[:alert] || flash[:notice] %></div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
